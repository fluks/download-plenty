{
    "manifest_version": 2,
    "name": "Download Them All",
    "version": "0.1.0",
    "description": "__MSG_extensionDescription__",

    "default_locale": "en",

    "icons": {
        "48": "data/logo.svg"
    },

    "applications": {
        "gecko": {
            "id": "downloadthemall@fluks"
        }
    },

    "content_scripts": [
        {
            "matches": [ "*://*/*" ],
            "js": [ "content_scripts/content_script.js" ]
        }
    ],

    "background": {
        "scripts": [ "background/background.js" ]
    },

    "browser_action" : {
        "default_title": "Download Them All",
        "default_icon": "data/logo.svg",
        "default_popup": "browser_action/popup.html",
        "browser_style": true
    },

    "permissions": [
        "activeTab",
        "*://*/*",
        "downloads"
    ]
}
