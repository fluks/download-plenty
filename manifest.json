{
    "manifest_version": 2,
    "name": "Download Plenty",
    "version": "0.1.0",
    "description": "__MSG_extensionDescription__",

    "default_locale": "en",

    "icons": {
        "48": "data/logo.svg"
    },

    "applications": {
        "gecko": {
            "id": "downloadplenty@fluks"
        }
    },

    "background": {
        "scripts": [ "background/background.js" ]
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": "data/logo.svg",
        "default_title": "Download Plenty"
    },

    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    },

    "permissions": [
        "activeTab",
        "<all_urls>",
        "downloads",
        "storage"
    ]
}
