{
    "manifest_version": 3,
    "name": "Download Plenty",
    "version": "1.0.0",
    "description": "__MSG_extensionDescription__",

    "default_locale": "en",

    "icons": {
        "16": "data/logo_16x16.png",
        "48": "data/logo_48x48.png",
        "96": "data/logo_96x96.png",
        "128": "data/logo_128x128.png"
    },

    "background": {
        "service_worker": "background/background.js"
    },

    "action": {
        "default_icon": "data/logo.png",
        "default_title": "Download Plenty"
    },

    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },

    "permissions": [
        "activeTab",
        "downloads",
        "storage",
        "scripting"
    ],

    "host_permissions": [
        "<all_urls>"
    ]
}
